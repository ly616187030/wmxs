<extend name="Public/layout"/>
<block name="style">
    <div class="container-fluid">
        <form method="POST" action="{:U('Upload/douploadfile')}" class="form-horizontal" target="hidden_frame" enctype="multipart/form-data">
            <input type="hidden" name="dir" value="file" />
            <input type="hidden" name="uploadid" value="{$uploadid}" />
            <div class="modal-body">
                <div class="alert alert-info" role="alert">选中文件后点击上传按钮</div>
                <div style="padding-bottom:20px;">文件大小限制：小于2M</div>
                <div class="form-group">
                    <div class="col-sm-8">
                        <input type="file" id="file" name="file">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" id="submit-pic" class="btn btn-primary">
                    上传
                </button>
            </div>
        </form>
    </div>
</block>