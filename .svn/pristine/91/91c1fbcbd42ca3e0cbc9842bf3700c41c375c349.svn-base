<extend name="./Application/Admin/View/Public/layout.html"/><block name="style">    <style>        body{            padding:20px;            font-family: "Microsoft Yahei";        }    </style></block><block name="main">    <div id="id_wudan">        <notempty name="list">            <volist name="list" id="_data">                <div class="panel panel-primary ">                    <div class="panel-heading">                        <h3 class="panel-title"><span>订单号：{$_data.order_sn}</span><span style="padding-left:30px">餐厅:{$_data.store_name}</span></h3>                    </div>                    <div class="panel-body">                        <div class="slide" >                            <table class="table table-striped">                                <tr >                                    <th>餐名</th>                                    <th>单价</th>                                    <th>份数</th>                                    <th>金额</th>                                    <th>支付方式</th>                                    <th>送餐时间</th>                                    <th>下单时间</th>                                </tr>                                <notempty name="_data.detail">                                    <volist name="_data.detail" id="_d">                                        <tr class="success">                                            <td>{$_d.cm_name}</td>                                            <td>{$_d.price}元</td>                                            <td>{$_d.quantity}份</td>                                            <td>{$_d['price']*$_d['quantity']}</td>                                            <td><eq name="_data.pay_type" value="1">在线支付<else />货到付款</eq></td>                                            <td>                                                {$_data.send_time|date='Y-m-d H:i',###}                                            </td>                                            <td>{$_data.xd_time|date='Y-m-d H:i:s',###}</td>                                        </tr>                                    </volist>                                    <tr style='color:#FF2D4B;'><td>菜品总价</td><td>&nbsp;</td><td>&nbsp;</td><td colspan='4'>{$_data.total}元</td></tr>                                    <tr style='color:#FF2D4B;'><td>返点金额</td><td>&nbsp;</td><td>&nbsp;</td><td colspan='4'>{$_data['total']*$_data['store_rebate']/100|round}元</td></tr>                                    <tr style='color:#FF2D4B;'><td>减去返点后价格</td><td>&nbsp;</td><td>&nbsp;</td><td colspan='4'>{$_data['total']-($_data['total']*$_data['store_rebate']/100)|round}元</td></tr>                                    <tr style='color:#FF2D4B;'><td>用餐人数</td><td>&nbsp;</td><td>&nbsp;</td><td colspan='4'>{$_data.people_num}人</td></tr>                                </notempty>                            </table>                        </div>                        <div class="orderlist">                            <label class="text-info glyphicon glyphicon-user"><strong>姓名：{$_data.username}</strong></label>                            &nbsp;&nbsp;&nbsp;                            <label class="text-info glyphicon glyphicon-phone"><strong>电话：{$_data.phone}</strong></label>                            &nbsp;&nbsp;&nbsp;                            <label class="text-info glyphicon glyphicon-home"><strong>地址：{$_data.province_name}{$_data.city_name}{$_data.town_name}{$_data.detail_address}</strong></label>                            &nbsp;&nbsp;&nbsp;                            <label class="text-info glyphicon glyphicon-volume-up"><strong>客户留言：{$_data.order_message}</strong></label>                            <label class="text-danger glyphicon glyphicon-circle-arrow-right" style="padding-left:20px;"><strong>订单配送状态：<switch name="_data.ord_peisong_status"><case value="1">等待配送员接单</case><case value="2">配送员已接单</case><case value="4">配送中</case><case value="4">已送达</case></switch></strong></label>                        </div>                        <div style="float:right;position:absolute; position: relative;"  >                            <label class="text-danger"><strong><font size="5">￥{$_data['total']-($_data['total']*$_data['store_rebate']/100)|round}元</font></strong></label>                            <!--<button class="btn submit-btn " id="confirm_order"  data-orderid="{$_data.order_id}" data-store_id="{$_data.store_id}">确认订单</button>-->                        </div>                    </div>                </div>            </volist>            <else/>            <empty name="pd_dp">                <h1 align='center'><span class='label label-default'> aOh! 暂时还没有订单!</span></h1><div>&nbsp;</div>                <else />                <h1 align='center'><span class='label label-default'> {$pd_dp}</span></h1><div>&nbsp;</div>            </empty>        </notempty>        <div class="page">            {$page}        </div>    </div>    <!-- 模态框（Modal） --></block><block name="script">    <script type="text/javascript">        $("#confirm_order").click( function () {            var orderid = $(this).data("orderid");            $.get("{:U('sellerConfirmOrder')}","orderid="+orderid).success(function(data){                data=='success' && location.reload();            });        });    </script></block>