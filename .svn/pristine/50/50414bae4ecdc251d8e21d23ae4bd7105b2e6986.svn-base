<extend name="./Application/Admin/View/Public/layout.html"/><block name="style">    <style>        body{            padding:40px 20px;        }    </style></block><block name="main">    <div class="row">        <div class="col-sm-2" style="margin-left:50px;width: auto;padding: 6px 35px 6px 35px;font-size:16px;">分享设置</div>    </div>    <div class="cf">        <div class="fl" style="margin:30px 0px 30px 60px;">            <a href="{:U('add')}">                <button class="btn btn-success btn-info" id="sqbtn">新 增</button>            </a>            <!--<button disabled="disabled" class="btn confirm ajax-post" target-form="ids" url="{:U('del')}">删 除</button>-->        </div>    </div>    <div class="data-table">        <table class="table table-bordered text-center table-responsive table-striped table-hover">            <!-- 表头 -->            <thead>            <tr><!--                <th class="row-selected row-selected">                    <input class="check-all" type="checkbox">                </th>-->                <th>奖励ID</th>                <th>奖励名称</th>                <th>奖励额度</th>                <th>红包到期时间</th>                <th>奖励获得方式</th>                <th>操作</th>            </tr>            </thead>            <!-- 列表 -->            <tbody>            <notempty name="list">                <volist name="list" id="vo">                    <tr><!--                        <td>                            <input class="ids" type="checkbox" value="{$vo.in_id}" name="in_id[]">                        </td>-->                        <td>{$vo.award_id}</td>                        <td>{$vo.award_name}</td>                        <td>{$vo.award_price}</td>                        <td>                            <if condition="$vo.award_time eq 0">                                -                                <else/>                                {$vo.award_time|date="Y-m-d",###}                            </if>                        </td>                        <td>                            <switch name="vo.award_status">                                <case value="0">关注微信公众号获得</case>                                <case value="1">注册找火锅会员获得</case>                            </switch>                        </td>                        <td>                            <a href="{:U('edit?award_id='.$vo['award_id'])}">编辑</a>                            <a href="{:U('defaults?award_id='.$vo['award_id'])}" class="ajax-get">                                <eq name="re" value="$vo['award_id']"><span style="color: #ff2222;font-weight: bold">当前默认</span>                                    <else/>                                    设为默认                                </eq>                            </a>                            <a href="{:U('del?award_id='.$vo['award_id'])}" class="ajax-get confirm">删除</a>                        </td>                    </tr>                </volist>                <else/>                <td colspan="17" class="text-center"> aOh! 暂时还没有内容! </td>            </notempty>            </tbody>        </table>    </div>    <!-- 分页 -->    <div class="page">        {$page}    </div></block>