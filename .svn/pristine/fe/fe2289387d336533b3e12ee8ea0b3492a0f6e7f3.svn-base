/**   filename: layout_wm.css*   author:flyrain*   date:2015/05/30*//*Header 头部*/body{    font-size:12px;    font-family: "微软雅黑", arial, sans-serif;}div,a{    padding:0;    margin:0;}.header{    width:100%;    height:580px;    position:relative;    background-image: url('../images/waimai/index_header_bg.jpg');    background-repeat: no-repeat;}.bar-opacity{    width:100%;    height:65px;    position: absolute;    top:0;    left:0;    background-color: #fe4d3d;    /*opacity: 0.8;*/}.bar-content{    position:relative;    width:1200px;    height: 65px;    line-height:50px;    margin:0 auto;    /*color:#fff;*/}.user-info{    height: 65px;    line-height: 65px;}.pinzhi{    font-size:1.8em;    height:65px;    font-weight: 800;    color:#e60012;    background: url("../images/waimai/pinzhi.png");    text-indent: -9999px;}.bar-content b{    font-size:1.5em;    height: 65px;    width:160px;    text-indent: -9999px;    display: inline-block;    background: url("../images/waimai/index_logo_small.png") no-repeat center;}.bar-content a{    margin-right:10px;    font-size:1.2em;    color:#fff;}.bar-content a:hover{    text-decoration:none;}.logo-section{    padding-top:210px;    font-weight: 800;    font-size:2em;    padding-bottom: 30px;    color:#fff;}.nav-section{    width:750px;    margin:0 auto;    position: relative;}.landing-city{    background-color:#fff;    position:relative;}.arrow-down{    color:#999;}.landing-city a{    display:inline-block;    width:100%;    height:100%;    font-size:1.3em;    font-weight:bold;    text-align:center;    color:#666;    height:55px;    line-height:55px;}.landing-city a:hover{    text-decoration:none;}#allcity ul li a{    padding:5px;    font-size:1.2em;}.landing-search{    height:100%;    margin-right: 0;    padding-right: 0;}.landing-search input{    width:100%;    height: 55px;    outline: none;    border:none;    text-indent:20px;    font-size:1.6em;}.landing-s-btn{    maring-left:0;    padding-left:0;    padding-right: 0;    margin-right: 0;}.landing-s-btn button{    width:100%;    height:55px;    line-height:55px;    outline: none;    border:none;    background: #ddd;    font-size:1.6em;    font-weight: bold;    color:#666;}.nav-section-content{    position: absolute;    top:75px;    width:750px;    height: 350px;    overflow: auto;    background-color: #fff;    box-shadow: 0 3px 3px 0 rgba(0,0,0,.3);    display: none;    z-index: 777;}.nav-section-content dl{    border-bottom: 1px solid #e3e3e3;    vertical-align: middle;}.nav-section-content dl dt{    height: 100%;    padding-top:20px;    color:#999;    font-size: 1.3em;    font-weight: normal;}.nav-section-content dl dd{    padding:10px;    overflow: hidden;}.nav-section-content ul{    list-style-type: none;}.nav-section-content ul li{    padding:3px 10px;    float: left;    width:140px;}.nav-section-content ul li a:hover{    color:#FF2D4B;    text-decoration:none;}/*下载信息 */.download-info,.weixin-code{    padding:40px 0;}.download-info>p{    font-weight: bolder;    font-size:3em;    color:#666;    padding:10px 0;}.download-info >p:first-child{    font-weight: normal;}.download-page{    margin-top:40px;}.download-page a{    padding:15px 20px 15px 30px ;    margin-right:10px;    color:#fff;}.download-page a:hover{    text-decoration:none;    opacity: 0.8;}.download-page a.apple{    background: #FF2D4B url("../images/waimai/apple_icon.png") no-repeat 10% center;}.download-page a.andriod{    background: #FF2D4B url("../images/waimai/andriod_icon.png") no-repeat 10% center;}/*底部*/.zy-footer{    width:750px;    margin:50px auto;    color:#999;}.zy-footer a {    color:#999;}.zy-footer a:hover{    color:#333;    text-decoration:none;}.footer-item dl dt{    margin-bottom:10px;    font-size:1.5em;}.footer-item dl dd{    padding:5px 0;}.copyright {    width:750px;    margin:20px auto;    font-size:1.2em;}/*==============================================注册页 Register=========================================================*/.register{    width:980px;    margin:0 auto;}.l-header a,.r-header{    display: inline-block;    width:160px;    height: 80px;    background: url("../images/waimai/login_logo.png") no-repeat center;    text-indent:-9999px;}.r-content{    border:1px solid #dfe8f2;    padding:50px 40px;}.r-content .form-control{    height: 45px;}.r-phone h3,.r-email h3{    padding:10px 0;}.alert-tip{    display:none;}.alert-tip .alert{    margin-bottom: 0;}.go-login{    font-size:1.3em;}.go-login b{    margin-right:10px;}.other-account{    padding-top:40px;}.r-phone .glyphicon-envelope,.r-email .glyphicon-phone{    color:#67ca67;    padding-right:5px;}/*===============================================登录页 Login====================================================================*/.login{    width:980px;    margin:0 auto;}.l-content-right{    border:1px solid #dfe8f2;    padding:30px 60px ;}.l-content-right .input-group,.l-content-right .form-group{    padding-bottom:15px;}.l-content-right .input-group .form-control,.l-content-right .form-group .form-control{    height: 45px;}.l-content-right .form-group p{    padding-top:20px;}/*百度地图关键字检索下拉框显示*/.tangram-suggestion-main{    z-index:9999;}