<extend name="./Application/Admin/View/Public/layout.html"/><block name="style">	<style>		body{			padding:40px 20px;		}	</style></block><block name="main">	<div class="row">		<div class="col-sm-2" style="margin-left:50px;width: auto;padding: 6px 35px 6px 35px;font-size:16px;">新增城市</div>	</div>	<!-- 标签页导航 -->	<div class="tab-wrap" style="margin-top: 50px;">		<div class="tab-content">			<!-- 表单 -->			<form id="form" action="{:U('add')}" method="post" class="form-horizontal">				<!-- 基础 -->				<div class="form-group" >					<label class="col-sm-2 control-label">所属区</label>					<div class="col-sm-2">						<select class="form-control"  id="province" name="province_code" >							<option value="">省份</option>							<volist name="_province" id="vo">								<option value="{$vo.code}" <eq name="vo.code" value="$list.province_code">selected="selected"</eq> >{$vo.name}</option>							</volist>						</select>					</div>					<div class="col-sm-2">						<select class="form-control" name="city_code" id="city">							<empty name="list.city_code">								<option value="">地级市</option>								<else/>								<option value="{$list.city_code}">{$list.city_code|get_city_name="city",###}</option>							</empty>						</select>					</div>					<div class="col-sm-2" style="display:none;">						<select class="form-control col-sm-2" id="town" name="town_code">							<empty name="list.town_code">								<option>区、县</option>								<else/>								<option value="{$list.town_code}">{$list.town_code|get_city_name="town",###}</option>							</empty>						</select>					</div>				</div>			 <div class="form-group">           		 <label class="col-sm-2 control-label" >排序</label>           			 <div class="col-sm-1">               			 <input type="number" class="form-control" name="sort_order" placeholder="0">           			 </div>           			  <label style="padding-top:7px;font-weight:normal;">（用于分组显示的顺序）</label>       		 </div>       		        		 				<!-- 按钮 -->				<div class="form-group">					<label class="col-sm-2 control-label" >&nbsp;</label>					<div class="col-sm-4">						<button class="btn submit-btn ajax-post btn-success" type="submit" target-form="form-horizontal">确定</button>						<button class="btn btn-return btn-success" onclick="javascript:history.back(-1);return false;">返回</button>					</div>				</div>			</form>		</div>	</div></block><block name="script">	<script type="text/javascript" src="__PUBLIC__/libs/ztools.js"></script>	<script>		var url="{:U('MenuPct/getCity','',false)}";		var curl="{:U('MenuPct/getTown','',false)}";		ztools.getPctMenu({"p_url":url,"c_url":curl});	</script></block>