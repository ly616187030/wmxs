<extend name="./Application/Admin/View/Public/layout.html"/>
<block name="style">
    <link rel="stylesheet" type="text/css" href="__CSS__/websit.css"/>
   <style>
       /* 二级菜单 */
       .sub-tab-nav {
           padding: 10px 20px;
           overflow: hidden;
           zoom: 1
       }
       .has-sub-nav .sub_tab {
           border: 1px solid #ddd;
           border-top: none;
           height: 30px;
           padding: 10px;
           margin: -15px 0 10px;
       }
       .sub_tab_content {
           margin-top: 20px;
           float: left;
           width: 100%
       }
       .sub_tab li {
           float: left;
           margin-right: 10px;
           list-style: none;
       }
       .sub_tab li a {
           display: block;
           height: 40px;
           line-height: 40px;
           padding: 0 15px;
           background: #eee;
           color: #333;
           position: relative;
           z-index: 10;
       }
       .sub_tab li a.cur {
           background-color: #015dae;
           color: #fff
       }
       .sub_tab li a .arrow {
           position: absolute;
           bottom: -6px;
           left: 50%;
           margin-left: -10px;
           display: none
       }
       .sub_tab li a.cur .arrow {
           display: block
       }
       .normal_tips {
           background: #f4ffc1;
           padding: 15px;
           color: #da4224;
           word-break: break-all;
           margin: 0 20px;
       }
       .normal_tips .fa {
           font-size: 20px;
       }
       body{
           padding:40px 20px;
       }
   </style>
    <link href="__CSS__/weiphp.css" rel="stylesheet">
</block>
