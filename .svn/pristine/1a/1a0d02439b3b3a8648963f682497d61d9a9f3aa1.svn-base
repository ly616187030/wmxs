<extend name="Public/base"/><block name="body">    <link href="__STATIC__/lhgdar/_doc/prettify/prettify.css" type="text/css" rel="stylesheet"/>    <script type="text/javascript" src="__STATIC__/lhgdar/lhgcore.lhgcalendar.min.js"></script>    <div class="main-title cf">        <h2>评价添加</h2>        <legend>&nbsp;</legend>    </div>    <form action="{:U('add')}" method="post" class="form-horizontal" enctype="multipart/form-data">        <div class="form-group"  >            <label class="col-sm-2 control-label">商家：</label>            <div class="col-sm-2">                  <select class="form-control" name="store_id">                      <if condition="$name eq ''">                           <option value="">请选择店铺</option>                          <else/>                          <option value="{$id}" style="display: none">{$name}</option>                      </if>                        <volist name="store" id="vo">                            <option value="{$vo.store_id}">{$vo.store_name}</option>                        </volist>                  </select>            </div>        </div>        <div class="form-group"  >            <label class="col-sm-2 control-label">用户：</label>            <div class="col-sm-1">                <select class="form-control cnd" name="uid">                    <option value="" style="display: none">类型</option>                    <option value="0" name="name">普通用户</option>                    <option value="1" name="name">匿名用户</option>                </select>            </div>            <div content="col-sm-2">                <select name='uid' style='width: 190px;display: none' class="lol form-control"></select>            </div>            <div class="col-sm-2 app"></div>        </div>        <div class="form-group">            <label class="col-sm-2 control-label">商家评分：</label>            <div class="col-sm-2">                <select class="form-control" name="pingfen" style="width: 150px">                    <option value="" style="display: none">请选择评分</option>                    <option value="1" style="color: gold;font-size: 18px">★</option>                    <option value="2" style="color: gold;font-size: 18px">★★</option>                    <option value="3" style="color: gold;font-size: 18px">★★★</option>                    <option value="4" style="color: gold;font-size: 18px">★★★★</option>                    <option value="5" style="color: gold;font-size: 18px;">★★★★★</option>                </select>            </div>        </div>        <div class="form-group">            <label class="col-sm-2 control-label">送达时间评分：</label>            <div class="col-sm-2">                <select class="form-control" name="pj_songda" style="width: 150px">                    <option value="" style="display: none">请选择评分</option>                    <option value="1" style="color: gold;font-size: 18px">★</option>                    <option value="2" style="color: gold;font-size: 18px">★★</option>                    <option value="3" style="color: gold;font-size: 18px">★★★</option>                    <option value="4" style="color: gold;font-size: 18px">★★★★</option>                    <option value="5" style="color: gold;font-size: 18px;">★★★★★</option>                </select>            </div>        </div>        <div class="form-group">            <label class="col-sm-2 control-label">送达服务评分：</label>            <div class="col-sm-2">                <select class="form-control" name="pj_service" style="width: 150px">                    <option value="" style="display: none">请选择评分</option>                    <option value="1" style="color: gold;font-size: 18px">★</option>                    <option value="2" style="color: gold;font-size: 18px">★★</option>                    <option value="3" style="color: gold;font-size: 18px">★★★</option>                    <option value="4" style="color: gold;font-size: 18px">★★★★</option>                    <option value="5" style="color: gold;font-size: 18px;">★★★★★</option>                </select>            </div>        </div>        <div class="form-group">            <label class="col-sm-2 control-label">评价内容：</label>            <div class="col-sm-3">                <textarea class="form-control" rows="3" name="content" maxlength="120"></textarea>            </div>            <label class="control-label" style="font-weight: normal">（最多只能输入120个字）</label>        </div>        <div class="form-group">            <label class='col-sm-2 control-label'>评价时间：</label>            <div class='col-sm-1'>                <input type='text' class='form-control' name='pj_time' id='demo_inp1' style="width: 175px">            </div>        </div>        <!--<div class="form-group"  >            <label class="col-sm-2 control-label">状态：</label>            <div class="col-sm-2">                <div class="radio">                    <label><input type="radio" name="status" value="0">启用</label>                    <label><input type="radio" name="status" value="1" checked="checked">禁用</label>                </div>            </div>        </div>-->        <div class="form-group">            <label class="col-sm-2 control-label">&nbsp;</label>            <div class="col-sm-3">                <button class="btn submit-btn ajax-post" id="submit" type="submit" target-form="form-horizontal">确 定</button>                <button class="btn btn-return " onclick="javascript:history.back(-1);return false;">返 回</button>            </div>        </div>    </form></block><block name="script">    <script type="text/javascript">            $('#demo_inp1').calendar({ format:'yyyy-MM-dd HH:mm:ss' });            $('#img').calendar({ id:'#cal3' });        $("select[name='pingfen'],[name='pj_service'],[name='pj_songda']").change(function(){            var value =$(this).val();            if(value != ''){                $(this).css('color','red');            }        });        $(".cnd").change(function() {                var option = $(this).find("option:checked").attr("value");                 if(option != 1){                     $('.app').html("");                     $.post("{:U('option')}",{option:option},function(data){                         if(data != ''){                             var temp = '';                             for(var i=0;i<data.length;i++){                                 temp += "<option value="+data[i].uid+">"+data[i].nickname+"</option>";                                 $('.lol').html(temp).css('display','block');                             }                         }                     });                 }else{                     $('.lol').css('display','none');                     $('.app').html("<input type='text' class='form-control' name='uid' style='width: 150px;display: none' value='0' />");                 }        });    </script></block>