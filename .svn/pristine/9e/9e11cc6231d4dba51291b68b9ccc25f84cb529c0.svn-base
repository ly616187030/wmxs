<block name="main">
    <div class="span9 page_message">
        <section id="contents">
            <div id="top-alert" class="fixed alert alert-error" style="display: none;"></div>
            <ul style="margin:0px;padding:0px;">
                <li style="width:8em;height:3em;line-height: 3em;background-color: #1fce02; list-style: none;text-align: center;margin:0px;padding:0px;font-size: 18px;"><a href="{:U('MemberPublic/index')}" style="color:#fff;text-decoration: none;">公众号管理</a></li>
            </ul>
            <div class="setting_step app_setting">
                <a class="step " href="{:U('MemberPublic/step_edit_0',array('id'=>$id))}">1.增加基本信息</a>
                <a class="step step_cur" href="{:U('MemberPublic/step_edit_1',array('id'=>$id))}">2.配置公众平台</a>
                <a class="step step_cur_1" style="color:#fff;" href="{:U('MemberPublic/step_edit_2',array('id'=>$id))}">3.保存接口配置</a>
            </div>
            <div class="tab-content">
                <!-- 表单 -->
                <form class="form-horizontal" method="post" action="{:U('step_edit_2',array('id'=>$id))}" id="form">
                    <!-- 基础文档模型 -->
                    <div class="tab-pane in tab1" id="tab1">
                        <label class="col-sm-12" style="height:40px;line-height: 40px;">AppID <span style="color:#ccc"> （应用ID） </span></label>
                        <div class="col-sm-3" >
                            <input type="hidden" name="id" value="{$id}" />
                            <input class="form-control" type="text" value="{$info.appid}" name="appid">
                        </div>
                        <label class="col-sm-12" style="height:40px;line-height: 40px;">AppSecret<span style="color:#ccc">（应用密钥）</span></label>
                        <div class="col-sm-3" >
                            <input class="form-control" type="text" value="{$info.secret}" name="secret">
                        </div>
                        <label class="col-sm-12" style="height:40px;line-height: 40px;">EncodingAESKey<span style="color:#ccc">（安全模式下必填）</span></label>
                        <div class="col-sm-3" >
                            <input class="form-control" type="text" value="{$info.encodingaeskey}" name="encodingaeskey">
                        </div>
                        <div class="col-sm-12" style="margin-top: 1em;">
                            <button  type="submit" id="submit" class="btn submit-btn btn-danger ajax-post" target-form="form-horizontal" style="width:12em;height:3em;">保 存</button>
                        </div>
                    </div>
                </form>
            </div>
            <!--帮助消息-->
            <div class="col-sm-12">
                <h3>帮助消息</h3>
                <p>以上消息可以从公众平台里找到，如下图</p>
                <p><img src="__WEIXIN__/images//help04.png" ></p>
            </div>
        </section>
</block>
